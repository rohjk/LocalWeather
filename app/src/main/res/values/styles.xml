<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="elevation">4dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="text_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="text_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="weather_list_item_title" parent="text_bold">
        <item name="android:background">@drawable/list_item_title_background</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <style name="weather_list_item" parent="text_normal">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>
</resources>